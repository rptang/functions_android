<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="369dp"
    android:layout_height="228dp"
    android:background="#FFF"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_system_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@mipmap/btn_jjhj_1"/>

    <TextView
        android:id="@+id/txt_system_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/login_system_tip"
        android:textSize="24sp"/>

    <View
        android:layout_width="376dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_login_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_confirm"
            android:textSize="28sp"
            android:textColor="@color/login_confirm"/>

    </LinearLayout>



</LinearLayout>